{% extends 'base.html.twig' %}

{% block title %}Mon profil {{ parent() }}{% endblock %}

{% block body %}
<main class="f-col a-cent">
    <h1 class="mb-64 tac">Mon Profil</h1>

    {% if participant.photoDeProfil %}
            <div class="profile_img mb-64" style="background-image: url('{{ asset('photos_de_profil/' ~ participant.photoDeProfil) }}'); background-size: cover; background-position: center;"></div>
    {% endif %}

    <div class="f-col a-cent j-even">
        {{ form_start(participantForm) }}

        {{ form_widget(participantForm) }}

        <div class="f a-cent j-cent boutons_reponsive">
            <button class="btn-scdr" type="submit">Enregistrer</button>
            <button class="btn-danger ml-32" type="reset">Annuler</button>
        </div>

        {{ form_end(participantForm) }}
    </div>
</main>
{% endblock %}


