{% extends 'base.html.twig' %}

{% block title %}Connexion {{parent()}}{% endblock %}

{% block body %}
<main class="f a-cent j-cent">
    <form method="post" class="f-col j-cent a-cent">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="mb-32">
            <label for="inputMail">Identifiant</label>
            <input type="text" value="{{ last_username }}" name="identifiant" id="inputMail" class="ml-32" required>
        </div>

        <div class="mb-32">
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="ml-32" required>
        </div>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        <div class="mb-32 ml-32 notcss">
            <input type="checkbox" id="remember_me" name="_remember_me" />
            <label for="remember_me" class="ml-16">Se souvenir de moi</label>
        </div>

        <button  type="submit">Connexion</button>
    </form>
</main>
{% endblock %}
