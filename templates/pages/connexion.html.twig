{% extends 'base.html.twig' %}

{% block title %}Connexion {% endblock %}

{% block body %}
<form method="post" class="f-col j-cent a-cent">
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="mb-32 f a-cent">
        <label for="inputMail">Identifiant</label>
        <input type="text" value="{{ last_username }}" name="identifiant" id="inputMail" class="ml-32" required>
    </div>

    <div class="mb-32 f a-cent">
        <label for="inputPassword">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="ml-32" required>
    </div>

{# le temps de connexion du remember me est reglable dans le yaml #}
    <div class="mb-32 f a-cent">
        <label for="remember_me">Se souvenir de moi</label>
        <input class="ml-32 " type="checkbox" id="remember_me" name="_remember_me" />
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button  type="submit">Connexion</button>
</form>
{% endblock %}
